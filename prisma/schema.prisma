generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName     String
  lastName      String @unique
  email         String @unique
  userSignature String
}

model Location {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fullName     String
  shortName    String
  street       String
  houseNumber  String
  postCode     String
  city         String
  tel          String?
  localNumber  String?
  contactEmail String?

  Firma      Firma? @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId String
}

model Firma {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fullName     String
  shortName    String
  street       String
  houseNumber  String
  localNumber  String?
  postCode     String
  city         String
  tel          String?
  contactEmail String?

  locations Location[]
}

model Valve {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firma    String
  location String

  userId        String
  firstName     String
  lastName      String
  userSignature String

  type         String
  serialNumber String
  protocolType String
  description  String?

  infoBlocks ValvesInfoBlock[]
}

model ValvesInfoBlock {
  id String @id @default(cuid()) @map("_id")

  valveLocation     String
  valveType         String
  valveSerialNumber String
  pressureOpen      Float
  pressureClose     Float
  pressureSetting   Float
  description       String?

  Valve   Valve?  @relation(fields: [valveId], references: [id], onDelete: Cascade)
  valveId String?
}

model Circuit {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dischargePressure       Float
  condensationTemperature Float
  subcooling              Float
  airTemperature          Float

  suctionPressure    Float
  suctionTemperature Float
  overHeat           Float

  inWaterPressure  Float
  outWaterPressure Float
  inTemperature    Float
  outTemperature   Float

  Chiller   Chiller @relation(fields: [circuitId], references: [id], onDelete: Cascade)
  circuitId String
}

model PowerConsumption {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deviceType   String
  amperage_1   Float
  amperage_2   Float
  amperage_3   Float
  interphaseOk String
  interphase   Float?

  Chiller            Chiller @relation(fields: [powerConsumptionId], references: [id], onDelete: Cascade)
  powerConsumptionId String
}

model Chiller {
  id           String   @id @default(cuid()) @map("_id")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  protocolType String

  userId        String
  firstName     String
  lastName      String
  userSignature String

  firma    String
  location String

  type                  String
  serialNumber          String
  driverType            String
  airTemperature        Float
  interphaseOK          String
  interphase            Float?
  refrigerationCircuits Float[]
  refrigerant           String
  settingsTemperature   Float[]
  controlledParameter   String
  supplyVoltage         Float
  supplyPhase           Float
  freonType             String
  freonAmount           Float
  highPressure          String
  lowPressure           String
  antiFrezzeTermostat   String
  measuredVoltage_1     Float
  measuredVoltage_2     Float
  measuredVoltage_3     Float

  pollution                String
  termalInsulation         String
  termalAndPressureControl String
  oilLevel                 String
  indicatorColor           String
  currentConsumption       String
  fansConsumption          String
  tightSystem              String

  controlMethod String
  leakGasTest   String
  gasAdded      Float
  gasRegain     Float

  description String?

  circuits          Circuit[]
  powerConsumptions PowerConsumption[]
}
